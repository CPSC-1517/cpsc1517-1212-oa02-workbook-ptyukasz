@page
@model RazorPagesWebAppDemo.Pages.formFieldControlsModel
@{
    ViewData["Title"] = "HTML Form Field Controls";
}
<h1>HTML Form Field Controls</h1>

@Model.Message

<form method = "post">
    <div>
        <label for="username">Username</label>
        <input type="text" id="Username" name="Username" value="@Model.Username" />
    </div>
    <div>
        <label for="Password">Password</label>
        <input type="Password" id="Password" name="Password" value="@Model.Password" />
    </div>
    <div>
        <label for="Password">Confirm Password</label>
        <input type="Password" id="ConfirmPassword" name="ConfirmPassword" 
        value="@Model.ConfrimPassword"/>
    </div>
    <div>
        <button type="submit">Submit</button>
    </div>
</form>
